@model IEnumerable<Cinema>

@{
    Layout = "_AdminLayout";
}

<h2 class="text-center my-3">Cinema List</h2>

<a href="@Url.Action("Create", "Cinema", new { area = "Admin" })" class="btn btn-success mb-3">Add New Cinema</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cinema in Model)
            {
                <tr>
                    <td>@cinema.Id</td>
                    <td>@cinema.Name</td>
                    <td>@cinema.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(cinema.Img))
                        {
                            <img src="~/images/@cinema.Img" alt="@cinema.Name" width="80" />
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Cinema", new { id = cinema.Id, area = "Admin" })" class="btn btn-sm btn-info">Edit</a>
                        <a href="@Url.Action("Delete", "Cinema", new { id = cinema.Id, area = "Admin" })" class="btn btn-sm btn-danger btn-delete">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No cinemas found.</td>
            </tr>
        }
    </tbody>
</table>



