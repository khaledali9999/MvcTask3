@model Actor

<h2 class="text-center my-3">Edit Actor</h2>

<div class="card shadow p-4 mx-auto" style="max-width: 600px;">
    <form  method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label  class="form-label fw-bold">Actor Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter actor name" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label for="Img" class="form-label fw-bold">Actor Image</label>
            <input type="file" name="Img" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.Img))
        {
                <div class="mb-3">
                    <label class="form-label fw-bold">Current Image</label>
                    <div>
                        <img src="~/images/@Model.Img" alt="Actor Image" style="max-width: 150px;" />
                    </div>
                </div>
        }

        <div class="d-flex justify-content-between mt-4">
            <a asp-area="Admin" asp-controller="Actor" asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

