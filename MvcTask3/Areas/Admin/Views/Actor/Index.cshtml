@model IEnumerable<Actor>

<h2 class="text-center my-3">Actors List</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Actor ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var actor in Model)
            {
                <tr>
                    <td>@actor.Id</td>
                    <td>@actor.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(actor.Img))
                        {
                            <img src="~/images/@actor.Img" alt="@actor.Name" width="100" />
                        }
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Actor" asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-sm btn-info">Edit</a>
                        <a asp-area="Admin" asp-controller="Actor" asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No actors found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-3">Add New Actor</a>
