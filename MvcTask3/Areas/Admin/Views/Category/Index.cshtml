@model IQueryable<Category>


<h2 class="text-center my-3">Category List</h2>
<a href="/Admin/Category/Create" class="btn btn-success mb-3">Add New Category</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.description</td>
                    <td>
                        <a href="/Admin/Category/Edit/@item.id" type="button" class="btn btn-sm btn-info">Edit</a>
                        <a href="/Admin/Category/Delete/@item.id" type="button" class="btn btn-sm btn-danger btn-delete">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No categories found.</td>
            </tr>
        }
    </tbody>
</table>


